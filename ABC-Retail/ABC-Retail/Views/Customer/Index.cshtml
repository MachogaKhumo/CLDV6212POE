@model IEnumerable<Customer>
@{
    ViewData["Title"] = "Customers";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Customers</h2>
    <a class="btn btn-primary" asp-action="Create">Add New Customer</a>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Username</th>
            <th>Email</th>
            <th>Shipping Address</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.Surname</td>
                <td>@c.Username</td>
                <td>@c.Email</td>
                <td>@c.ShippingAddress</td>
                <td>
                    <!-- EDIT BUTTON: Use Tag Helpers -->
                    <a class="btn btn-sm btn-outline-info"
                       asp-action="Edit"
                       asp-route-partitionKey="@c.PartitionKey"
                       asp-route-rowKey="@c.RowKey">Edit</a>

                    <!-- DELETE BUTTON: Ensure form sends BOTH parameters -->
                    <form method="post" asp-action="Delete" style="display:inline;">
                        <input type="hidden" name="partitionKey" value="@c.PartitionKey" />
                        <input type="hidden" name="rowKey" value="@c.RowKey" />
                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Are you sure you want to delete this customer?');"> Delete </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>