<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ABC_Retail</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">ABCRetails</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample" aria-controls="navbarsExample" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarsExample">
                <!-- Left-aligned navigation -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="/Home">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Customer">Customers</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Product">Products</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Order">Orders</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Upload">Upload Files</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Privacy">Privacy</a></li>
                </ul>

                <!-- Right-aligned user/login menu -->
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                Welcome, @User.Identity.Name!
                            </a>
                            <ul class="dropdown-menu">
                                @if (User.IsInRole("Admin"))
                                {
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="AdminDashboard">Admin Dashboard</a></li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="CustomerDashboard">My Dashboard</a></li>
                                }
                                <li><a class="dropdown-item" asp-controller="Cart" asp-action="Index">My Cart</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Login" asp-action="Logout">Logout</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Login" asp-action="Index">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @if (TempData["Msg"] != null)
        {
            <div class="alert alert-success">@TempData["Msg"]</div>
        }
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
