@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="mt-4">
    <h2>Welcome, @User.Identity?.Name!</h2>
    <p class="text-muted">You are logged in as an <strong>Administrator</strong>.</p>

    @if (ViewBag.AdminSummary != null)
    {
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Total Customers</h5>
                        <p class="card-text display-6">@ViewBag.AdminSummary.TotalCustomers</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Total Orders</h5>
                        <p class="card-text display-6">@ViewBag.AdminSummary.TotalOrders</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="list-group">
        <a asp-controller="Customer" asp-action="Index" class="list-group-item list-group-item-action">Manage Customers</a>
        <a asp-controller="Product" asp-action="Index" class="list-group-item list-group-item-action">Manage Products</a>
        <a asp-controller="Order" asp-action="Manage" class="list-group-item list-group-item-action">View & Process Orders</a>
        <a asp-controller="Upload" asp-action="Index" class="list-group-item list-group-item-action">View Uploaded Files</a>
    </div>
</div>