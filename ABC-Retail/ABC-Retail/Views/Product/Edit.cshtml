@model Product
@{
    ViewData["Title"] = "Edit Product";
}
<h2>Edit Product</h2>
<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="PartitionKey" />
    <input type="hidden" asp-for="RowKey" />
    <input type="hidden" asp-for="ETag" />

    <div class="mb-3">
        <label class="form-label">Product Name</label>
        <input asp-for="ProductName" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Price</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
    </div>
    <div class="mb-3">
        <label class="form-label">Stock Available</label>
        <input asp-for="StockAvailable" class="form-control" type="number" />
    </div>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="mb-3">
            <label class="form-label">Current Image</label>
            <div><img src="@Model.ImageUrl" class="img-thumbnail" style="max-width:200px" /></div>
        </div>
    }
    <div class="mb-3">
        <label class="form-label">Replace Image</label>
        <input class="form-control" type="file" name="image" />
    </div>

    <button class="btn btn-primary" type="submit">Update</button>
    <a class="btn btn-secondary" href="/Product">Cancel</a>
</form>